<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/beauty_customer_detail_info"
        android:visibility="gone"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@color/beauty_color_D9D9D9" />

    <LinearLayout
        android:id="@+id/layout_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/textView3"
            style="@style/customer_info_item_left"
            android:textSize="@dimen/text_16"
            android:textColor="#333333"
            android:text="@string/customer_card_num"/>

        <TextView
            android:id="@+id/tv_card_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingLeft="5dp"
            android:textColor="@color/beauty_color_FF9F00"
            android:textSize="16sp" />

        <ImageView
            style="@style/customer_info_item_img"
            android:contentDescription="@null"
            android:visibility="gone"
            android:src="@drawable/beauty_ic_yellow_right_arrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:id="@+id/member_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cus_yue_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/customer_detail_item_bg"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <TextView
                        android:id="@+id/customer_member_yue_title"
                        style="@style/customer_info_item_left"
                        android:text="@string/customer_yue"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/customer_member_yue"
                        style="@style/customer_info_item_right"
                        android:textColor="#ff7901" />

                    <ImageView
                        android:id="@+id/customer_yue_img"
                        style="@style/customer_info_item_img" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cus_jifen_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/customer_detail_item_bg"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <TextView
                        android:id="@+id/customer_member_jifen_title"
                        style="@style/customer_info_item_left"
                        android:text="@string/customer_jifen"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/customer_member_jifen"
                        style="@style/customer_info_item_right"
                        android:textColor="#ff7901" />

                    <ImageView
                        android:id="@+id/customer_jifen_img"
                        style="@style/customer_info_item_img" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cus_quan_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/customer_detail_item_bg"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <TextView
                        android:id="@+id/customer_member_quan_title"
                        style="@style/customer_info_item_left"
                        android:text="@string/customer_youhuiquan"
                        android:textColor="@color/beauty_color_333333" />

                    <TextView
                        android:id="@+id/customer_member_quan"
                        style="@style/customer_info_item_right"
                        android:textColor="#ff7901" />

                    <ImageView
                        android:id="@+id/customer_quan_img"
                        style="@style/customer_info_item_img" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cus_expense_ll"
                    android:layout_width="0dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/customer_detail_item_bg"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <TextView
                        android:id="@+id/customer_expense_title"
                        style="@style/customer_info_item_left"
                        android:text="@string/customer_expense_service"
                        android:textColor="@color/beauty_color_333333" />

                    <TextView
                        android:id="@+id/customer_expense_service"
                        style="@style/customer_info_item_right"
                        android:textColor="#ff7901" />

                    <ImageView
                        android:id="@+id/customer_expense_service_img"
                        style="@style/customer_info_item_img" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/cus_card_time_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/customer_detail_item_bg"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <TextView
                        android:id="@+id/customer_card_time_title"
                        style="@style/customer_info_item_left"
                        android:text="@string/customer_card_time"
                        android:textColor="@color/beauty_color_333333" />

                    <TextView
                        android:id="@+id/customer_card_time_service"
                        style="@style/customer_info_item_right"
                        android:textColor="#ff7901" />

                    <ImageView
                        android:id="@+id/customer_send_quan_img"
                        style="@style/customer_info_item_img" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cus_wxapp_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/customer_detail_item_bg"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp">

                    <TextView
                        android:id="@+id/customer_wxapp_title"
                        style="@style/customer_info_item_left"
                        android:text="@string/customer_wxapp_service"
                        android:textColor="@color/beauty_color_333333" />

                    <TextView
                        android:id="@+id/customer_wxapp_service"
                        style="@style/customer_info_item_right"
                        android:textColor="#ff7901" />

                    <ImageView
                        android:id="@+id/customer_wxapp_service_img"
                        style="@style/customer_info_item_img" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/cus_pwd_ll"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/customer_detail_item_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp">

                <TextView
                    android:id="@+id/customer_member_pwd_title"
                    style="@style/customer_info_item_left"
                    android:text="@string/customer_pasword"
                    android:textColor="@color/beauty_color_333333" />

                <TextView
                    android:id="@+id/customer_member_pwd"
                    style="@style/customer_info_item_right"
                    android:textColor="#ff7901" />

                <ImageView
                    android:id="@+id/customer_member_pwd_img"
                    style="@style/customer_info_item_img" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/customer_detail_item_bg"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:visibility="invisible" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/beauty_bg_dotted_line"
            android:layerType="software" />

        <LinearLayout
            android:id="@+id/group_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/customer_group_title"
                android:textColor="@color/beauty_color_666666"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/beauty_color_333333"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/birthday_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/customer_brith_title"
                android:textColor="@color/beauty_color_666666"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/birthday"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/beauty_color_333333"
                android:textSize="@dimen/text_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/customer_memo"
                android:textColor="@color/beauty_color_666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/beauty_color_333333"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/hobby_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/customer_hobby"
                android:textColor="@color/beauty_color_666666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/hobby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:textColor="@color/beauty_color_333333"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>