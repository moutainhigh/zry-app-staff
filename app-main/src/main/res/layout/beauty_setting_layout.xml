<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dinnerdish_bg">

    <fragment
        android:id="@+id/tbf_status_bar"
        android:name="com.zhongmei.bty.dinner.orderdish.TitleBarFragment_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/settings_leftTitlell"
            android:layout_weight="1"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/sv_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dinner_left_bg_shadow"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/settings_left1"
                        android:text="场景设置" />


                    <TextView
                        android:id="@+id/setting_use_sence"
                        style="@style/settings_left2"
                        android:tag="场景设置"
                        android:text="使用场景" />


                    <TextView
                        style="@style/settings_left1"
                        android:text="设备" />

                    <TextView
                        android:id="@+id/setting_baseInfo"
                        style="@style/settings_left2"
                        android:tag="设备"
                        android:text="基本信息" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/print_line" />

                    <TextView
                        android:id="@+id/setting_tables"
                        style="@style/settings_left2"
                        android:tag="设备"
                        android:text="房间绑定" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:background="@color/print_line" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/right_container1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:background="#ffffff"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>
</LinearLayout>
