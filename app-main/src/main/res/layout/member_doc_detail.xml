<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_doc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="标题"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_doc_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_doc_title"
            android:layout_centerHorizontal="true"
            android:text="2019-05-03 12:34:33"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_16" />

        <ImageView
            android:id="@+id/iv_doc_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/beauty_icon_customer_edit" />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_doc_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="结果还是很令人满意的，不错不错" />

            <LinearLayout
                android:id="@+id/layout_task_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="任务提醒" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务主题："
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/tv_task_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客户回访"
                        android:textColor="@color/text_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提醒时间："
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/tv_task_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2019-06-04 12：44：55"
                        android:textColor="@color/text_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务内容："
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/tv_task_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="顾客在店里做了一个新产品，需要跟踪查看效果。"
                        android:textColor="@color/text_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="任务结论："
                        android:textColor="@color/text_gray" />

                    <TextView
                        android:id="@+id/tv_task_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="反馈良好"
                        android:textColor="@color/text_gray" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </ScrollView>
</LinearLayout>