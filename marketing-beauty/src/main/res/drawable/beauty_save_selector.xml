<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#acc2db"></solid>
            <stroke android:width="@dimen/beauty_stroke_width" android:color="#acc2db" />
            <corners android:radius="0dp"></corners>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#c0d8f4"></solid>
            <stroke android:width="@dimen/beauty_stroke_width" android:color="#c0d8f4" />
            <corners android:radius="0dp"></corners>
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle">
            <solid android:color="#c0d8f4"></solid>
            <stroke android:width="@dimen/beauty_stroke_width" android:color="#c0d8f4" />
            <corners android:radius="0dp"></corners>
        </shape>
    </item>
</selector>